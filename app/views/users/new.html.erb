<h1>New user</h1>

<% if @user.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.submit  %>
<% end %>
